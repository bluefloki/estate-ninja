{% extends "layout.jinja" %}

{% block content %}
<form method="post" class="2xl:w-1/3 md:w-1/2 w-full p-6">
  <div class="w-full my-4">
    <label for="lot-size" class="font-semibold text-sm">Lot Size (sqft)</label>
    <input type="number" class="input input-bordered w-full mt-3" name="lot-size" placeholder="e.g 5000" required>
  </div>

  <div class="w-full my-4">
    <label for="building-type" class="font-semibold text-sm">Building Type</label>
    <br>
    <select name="building-type" class="select select-bordered w-full mt-3" required>
      <option value="1">Single Family Home</option>
      <option value="2">Two-family Conversion</option>
      <option value="3">Duplex</option>
      <option value="4">Townhouse End Unit</option>
      <option value="5">Townhouse Inside Unit</option>
    </select>
  </div>

  <div class="w-full my-4">
    <label for="house-style" class="font-semibold text-sm">House Style</label>
    <br>
    <select name="house-style" class="select select-bordered w-full mt-3" required>
      <option value="1">Two Story</option>
      <option value="2">One Story</option>
      <option value="3">One and a Half Finished</option>
      <option value="4">One and a Half Unfinished</option>
      <option value="5">Split Foyer</option>
      <option value="6">Split Level</option>
      <option value="7">Two and a Half Unfinished</option>
      <option value="8">Two and a Half Finished</option>
    </select>
  </div>

  <div class="w-full my-4">
    <label for="quality" class="font-semibold text-sm">House Quality (1-10)</label>
    <input type="number" class="input input-bordered w-full mt-3" name="quality" placeholder="e.g 8" required>
  </div>

  <div class="w-full my-4">
    <label for="condition" class="font-semibold text-sm">House Condition (1-10)</label>
    <input type="number" class="input input-bordered w-full mt-3" name="condition" placeholder="e.g 7" required>
  </div>

  <div class="w-full my-4">
    <label for="year" class="font-semibold text-sm">Year Built</label>
    <input type="number" class="input input-bordered w-full mt-3" name="year" placeholder="e.g 2001" required>
  </div>

  <div class="w-full my-4">
    <label for="garage" class="font-semibold text-sm">Garage (no. of cars, 0 - 4)</label>
    <select name="garage" class="select select-bordered w-full mt-3" required>
      <option value="0">0 Cars</option>
      <option value="1">1 Car</option>
      <option value="2">2 Cars</option>
      <option value="3">3 Cars</option>
      <option value="4">4 Cars</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary w-full mt-4">
    Predict
  </button>
</form>
{% endblock %}